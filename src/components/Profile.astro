---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets';
import meImage from '../assets/Me.jpeg';

const techIcons: Tech[] = [
  { name: 'React', icon: 'material-icon-theme:react' },
  { name: 'Vue', icon: 'material-icon-theme:vue' },
  { name: 'Node', icon: 'logos:nodejs-icon' },
  { name: 'TailwindCSS', icon: 'logos:tailwindcss-icon', },
];

interface Tech {
  name: string;
  icon: string;
}
---

<section id="profile" class="relative min-h-screen flex items-center justify-center overflow-hidden py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 w-full">
    <div class="flex flex-col md:flex-row items-center justify-center gap-12 md:gap-20">
      
      <!-- Profile Photo with Tech Frame -->
      <div class="relative group">
        <!-- Rotating Tech Frame -->
        <!-- Rotating Tech Frame System -->
        <div class="absolute inset-0 -m-11 z-20 pointer-events-none">
          <!-- Main Orbital Track (Visible Ring) -->
          <div class="absolute inset-0 rounded-full border border-dashed border-neon-blue/20 animate-[spin_10s_linear_infinite]"></div>
          
          <!-- Secondary Decorative Ring (Reverse Rotation) -->
          <div class="absolute inset-4 rounded-full border border-neon-purple/20 animate-[spin_15s_linear_infinite_reverse] opacity-60"></div>

          <!-- Icons Orbiting -->
          <div class="absolute inset-0 animate-[spin_10s_linear_infinite]">
            {techIcons.map((tech, index) => {
              const angle = (index / techIcons.length) * 2 * Math.PI;
              const radius = 140; 
              const x = Math.cos(angle) * radius;
              const y = Math.sin(angle) * radius;
              return (
                <div 
                  class="absolute w-12 h-12 bg-slate-900/90 backdrop-blur-md border border-neon-blue/40 rounded-full flex items-center justify-center text-neon-blue shadow-[0_0_15px_rgba(0,243,255,0.3)] hover:scale-110 hover:border-neon-blue transition-all duration-300 pointer-events-auto"
                  style={`left: 50%; top: 50%; transform: translate(calc(-50% + ${x}px), calc(-50% + ${y}px));`}
                >
                   <Icon name={tech.icon} class="w-6 h-6 animate-[spin_10s_linear_infinite_reverse]" />
                </div>
              );
            })}
          </div>
        </div>

        <!-- Main Photo Container -->
        <div class="relative w-48 h-48 rounded-full p-1 bg-linear-to-tr from-neon-blue via-primary-500 to-neon-purple shadow-[0_0_50px_rgba(0,243,255,0.3)] z-10">
          <div class="w-full h-full rounded-full overflow-hidden bg-slate-900 border-4 border-slate-900 relative">
             <Image src={meImage} alt="Rey Quintero" class="w-full h-full object-cover" /> 
          </div>
        </div>
      </div>

      <!-- Text Content -->
      <div class="text-center md:text-left max-w-xl">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-neon-blue/10 border border-neon-blue/20 text-neon-blue text-sm font-medium mb-6 animate-fade-in">
          <span class="w-2 h-2 rounded-full bg-neon-blue animate-pulse"></span>
          2+ Years of Experience
        </div>

        <h1 class="text-5xl md:text-7xl font-bold text-slate-100 mb-4 tracking-tight animate-slide-up">
          Rey <span class="text-transparent bg-clip-text bg-linear-to-r from-neon-blue to-primary-500">Quintero</span>
        </h1>
        
        <h2 class="text-2xl md:text-3xl text-slate-300 font-medium mb-6 animate-slide-up" style="animation-delay: 0.1s;">
          Fullstack Developer <span class="text-primary-400 text-lg block md:inline md:ml-2 font-normal">(Frontend Focused)</span>
        </h2>

        <p class="text-slate-400 text-lg leading-relaxed mb-8 animate-slide-up" style="animation-delay: 0.2s;">
          Passionate about crafting intuitive and dynamic user experiences. I specialize in building modern web applications with a strong focus on frontend technologies while maintaining robust backend integrations.
        </p>

        <div class="flex flex-col sm:flex-row items-center gap-4 animate-slide-up" style="animation-delay: 0.3s;">
          <a 
            href="https://github.com/Bluesfire1467" 
            target="_blank"
            class="flex items-center gap-2 px-6 py-3 rounded-full bg-slate-800 text-white font-semibold hover:bg-slate-700 border border-slate-700 hover:border-neon-blue transition-all group"
          >
            <svg class="w-5 h-5 group-hover:text-neon-blue transition-colors" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            GitHub
          </a>
          <a 
            href="https://www.linkedin.com/in/reyqg/" 
            target="_blank"
            class="flex items-center gap-2 px-6 py-3 rounded-full bg-primary-600 text-white font-semibold hover:bg-primary-500 shadow-lg shadow-primary-500/25 hover:shadow-primary-500/40 transform hover:-translate-y-1 transition-all"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
